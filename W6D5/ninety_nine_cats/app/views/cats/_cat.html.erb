<% if action == 'show' %>
    <a href="<%= cats_url %>">Cats Index Link</a>
<% else %>
    <a href="<%= cat_url(cat.id) %>"><%= cat.name %> Show Page</a>
<% end %>



<table>
    <thead>
        <tr>
            <th colspan="2"><%= cat.name %></th>
        </tr>
    </thead>
    <tbody>
      
        <tr>
            <td>Birthdate: </td>
            <td> <%= cat.birthdate %> </td>
        </tr>
        <tr>
            <td>Age: </td>
            <td> <%= cat.age_calc %> </td>
        </tr>
        <tr>
            <td>Color: </td>
            <td> <%= cat.color %> </td>
        </tr>
        <tr>
            <td>Sex: </td>
            <td> <%= cat.sex %>  </td>    
        </tr>
      
        <tr>            
           <td> <%= cat.description %> </td>
        </tr>
    </tbody>
</table>